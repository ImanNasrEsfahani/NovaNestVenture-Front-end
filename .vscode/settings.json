{
    "i18n-ally.localesPaths": [
        "app/i18n/locals"
    ],
    "i18n-ally.locales": [
        "en",
        "fa"
    ],
    "i18n-ally.defaultLocale": "en",
    "i18n-ally.enabledFrameworks": [
        "react"
